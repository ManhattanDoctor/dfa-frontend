{
    "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
    "version": 1,
    "newProjectRoot": "src/packages/application",
    "cli": {
        "cache": {
            "enabled": false
        }
    },
    "projects": {
        "platform": {
            "root": "src/packages/application/platform",
            "sourceRoot": "src/packages/application/platform",
            "projectType": "application",
            "prefix": "app",
            "schematics": {
                "@schematics/angular:component": {
                    "style": "sass"
                },
                "@schematics/angular:application": {
                    "strict": true
                }
            },
            "architect": {
                "build": {
                    "builder": "@angular-devkit/build-angular:application",
                    "options": {
                        "outputPath": "build/platform",
                        "index": "src/packages/application/platform/index.html",
                        "browser": "src/packages/application/platform/main.ts",
                        "polyfills": ["polyfills.ts"],
                        "aot": true,
                        "tsConfig": "src/packages/application/platform/tsconfig.json",
                        "assets": [
                            {
                                "glob": "**/*",
                                "input": "node_modules/@ts-core/angular/asset/language",
                                "output": "/assets/language"
                            },
                            {
                                "glob": "**/*",
                                "input": "node_modules/@ts-core/angular/htdocs",
                                "output": "/"
                            },
                            {
                                "glob": "**/*",
                                "input": "htdocs/common",
                                "output": "/"
                            },
                            {
                                "glob": "**/*",
                                "input": "htdocs/dfa",
                                "output": "/"
                            },
                            {
                                "glob": "**/*",
                                "input": "htdocs/platform",
                                "output": "/"
                            }
                        ],
                        "styles": [
                            "node_modules/csshake/dist/csshake-horizontal.css",

                            "htdocs/dfa/assets/font/google/ptsans/all.css",
                            "htdocs/dfa/assets/font/google/roboto/all.css",
                            "htdocs/dfa/assets/font/awesome/css/all.css",

                            "src/packages/application/platform/style/preloader.css",
                            "src/packages/application/platform/style/primary.scss"
                        ],
                        "scripts": [
                            "node_modules/interactjs/dist/interact.min.js", 
                            "node_modules/numeral/numeral.js", 
                            "node_modules/moment/moment.js"
                        ],
                        "allowedCommonJsDependencies": [
                            "util",
                            "axios",
                            "lodash",
                            "moment",
                            "numeral",
                            "hammerjs",
                            "validator",
                            "recordrtc",
                            "tweetnacl",
                            "interactjs",
                            "file-saver",
                            "numeral/locales/ru",
                            "numeral/locales/en",
                            "@messageformat/core",
                            "css-element-queries"
                        ],
                        "serviceWorker": "src/packages/application/platform/ngsw-config.json",
                        "stylePreprocessorOptions": {
                            "includePaths": ["./node_modules", "./src/packages/module"]
                        }
                    },
                    "configurations": {
                        "development": {
                            "aot": true,
                            "optimization": false,
                            "outputHashing": "none",
                            "sourceMap": false,
                            "namedChunks": false,
                            "extractLicenses": false
                        },
                        "production": {
                            "aot": true,
                            "optimization": {
                                "fonts": true,
                                "scripts": true,
                                "styles": {
                                    "minify": true,
                                    "inlineCritical": true
                                }
                            },
                            "outputHashing": "all",
                            "sourceMap": false,
                            "namedChunks": false,
                            "extractLicenses": true,

                            "budgets": [
                                {
                                    "type": "initial",
                                    "maximumWarning": "5mb",
                                    "maximumError": "10mb"
                                },
                                {
                                    "type": "anyComponentStyle",
                                    "maximumWarning": "2kb",
                                    "maximumError": "4kb"
                                }
                            ]
                        }
                    }
                },
                "serve": {
                    "builder": "@angular-devkit/build-angular:dev-server",
                    "options": {
                        "buildTarget": "platform:build:development"
                    },
                    "configurations": {
                        "production": {
                            "buildTarget": "platform:build:production"
                        }
                    }
                }
            }
        }
    }
}
